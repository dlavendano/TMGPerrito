<mvc:View
	controllerName="sap.ui.demo.cart.controller.Welcome"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		id="page">
		<landmarkInfo>
			<PageAccessibleLandmarkInfo
				rootRole="Region"
				rootLabel="{i18n>Welcome_rootLabel}"
				contentRole="Main"
				contentLabel="{i18n>Welcome_contentLabel}"
				headerRole="Region"
				headerLabel="{i18n>Welcome_headerLabel}"/>
		</landmarkInfo>
		<customHeader>
			<Bar>
				<contentLeft>
					<Button
						icon="sap-icon://menu2"
						press=".onShowCategories"
						visible="{appView>/smallScreenMode}"/>
				</contentLeft>
				<contentMiddle>
					<Title
						level="H2"
						tooltip="{i18n>welcomeDescription}"
						text="{i18n>welcomeHeadline}"/>
				</contentMiddle>
				<contentRight>
					<ToggleButton
						icon="sap-icon://email"
						pressed="{= ${appView>/layout}.startsWith('ThreeColumns') }"
						tooltip="{i18n>toCartButtonTooltip}"
						press=".onToggleCart">
					</ToggleButton>
				</contentRight>
			</Bar>
		</customHeader>
		<content>
			<l:BlockLayout background="Light">
				<l:BlockLayoutRow>
					<l:BlockLayoutCell class="sapUiNoContentPadding">
						<Carousel
							id="welcomeCarousel"
							showPageIndicator="false"
							loop="true"
							pageChanged=".onCarouselPageChanged"
							visible="{=!${device>/system/phone}}">
							<pages>
								<VBox renderType="Bare">
									<Image
										src="{
											path: 'view>/welcomeCarouselQuienes',
											formatter : '.formatter.pictureUrl'
											}"
										width="100%"
										height="40%"/>
									<Text
										text="{i18n>welcomeCarouselQuienes}"
										class="welcomeCarouselText"/>
								</VBox>
								<VBox renderType="Bare">
									<Image
										src="{
											path: 'view>/welcomeCarouselClientes',
											formatter : '.formatter.pictureUrl'
										}"
										width="100%"
										height="40%"/>
									<Text
										text="{i18n>welcomeCarouselClientes}"
										class="welcomeCarouselText"/>
								</VBox>
								<VBox renderType="Bare">
									<Image
										src="{
											path: 'view>/welcomeCarouselSectores',
											formatter : '.formatter.pictureUrl'
											}"
										width="100%"
										height="40%"/>
									<Text
										text="{i18n>welcomeCarouselSectores}"
										class="welcomeCarouselText"/>
								</VBox>
								<VBox renderType="Bare">
									<Image
										src="{
											path: 'view>/welcomeCarouselCobertura',
											formatter : '.formatter.pictureUrl'
											}"
										width="100%"
										height="40%"/>
									<Text
										text="{i18n>welcomeCarouselCobertura}"
										class="welcomeCarouselText"/>
								</VBox>
							</pages>
						</Carousel>
					</l:BlockLayoutCell>
				</l:BlockLayoutRow>
			</l:BlockLayout>
			<Panel
				id="panelViewed"
				accessibleRole="Region"
				backgroundDesign="Transparent"
				class="sapUiNoContentPadding">
				<headerToolbar>
					<Toolbar>
						<Title
							text="Nuestras Ãreas:"
							level="H3"
							titleStyle="H2"
							class="sapUiMediumMarginTopBottom"/>
					</Toolbar>
				</headerToolbar>
				<l:BlockLayout background="Default">
					<l:BlockLayoutRow
						id="viewedRow"
						content="{view>/Viewed}">
						<l:content>
							<l:BlockLayoutCell class="sapUiContentPadding">
								<l:Grid
									defaultSpan="XL12 L12 M12 S12"
									vSpacing="0"
									hSpacing="0">
									<FlexBox
										height="3.5rem"
										renderType="Bare">
										<l:VerticalLayout>
											<ObjectIdentifier
												tooltip="{i18n>openProductDetails} {view>Product/Name}"
												titleActive="true"
												titlePress=".onSelectProduct"
												class="sapUiTinyMarginBottom"/>
											
										</l:VerticalLayout>
									</FlexBox>
									<FlexBox
										renderType="Bare"
										justifyContent="Center">
										<Image
											src="{
												path: 'view>Product/PictureUrl',
												formatter : '.formatter.pictureUrl'
											}"
											width="100%"
											height="100%"
											press=".onSelectProduct"
											tooltip="{i18n>openProductDetails} {view>Product/Name}"
											alt="{i18n>alternativeImageText} {view>Product/Name}"/>
									</FlexBox>
								</l:Grid>
							</l:BlockLayoutCell>
						</l:content>
					</l:BlockLayoutRow>
				</l:BlockLayout>
			</Panel>
		</content>
	</Page>
</mvc:View>
